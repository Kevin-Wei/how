<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<%= link_to "New Step", new_task_step_path(@task) %>

<ul id='steps'>
  <% @task.steps.each do |step| %>
    <li>
      #<%= step.order %> -
      <%= link_to step.todo, [@task, step] %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
